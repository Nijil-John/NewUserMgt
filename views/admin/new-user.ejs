<%- include('../layouts/header.ejs') %>
<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    color: #333;
    text-align: center;
}

main {
    margin-top: 50px;
}

h1 {
    color: #333;
}

form {
    margin-top: 20px;
}

form input[type="text"],
form input[type="email"],
form input[type="password"],
form input[type="file"] {
    padding: 8px;
    margin-bottom: 10px;
    width: 300px;
}

form input[type="submit"] {
    padding: 8px 16px;
    background-color: #007bff;
    color: #fff;
    border: none;
    cursor: pointer;
}

form input[type="submit"]:hover {
    background-color: #0056b3;
}

button {
    margin-top: 20px;
}

button a {
    color: #007bff;
    text-decoration: none;
}

button a:hover {
    text-decoration: underline;
}

p {
    color: #ff0000;
}



</style>



    <main>
        <h1>Add new-user</h1>
        <form id="registeration" action="/admin/new-user" method="POST" enctype="multipart/form-data">

            <input type="text" id="name" name="name" placeholder="Enter Name" required><br><br>


            <input type="email" id="email" name="email" placeholder="Enter Email" required><br><br>


            <input type="text" id="mobile" name="mno" pattern="[0-9]{10}" placeholder="Enter Mobile Number"
                required><br><br>


            <input type="file" id="image" name="image" accept="image/*" placeholder="Upload your Profile picture"
                required><br><br>


            <input type="password" id="password" name="password" placeholder="Enter Your Password" required><br><br>

            <input type="submit" value="Add user">
        </form>

        <button><a href="/admin/dashboard"> back </a></button>
        <% if(typeof message !=="undefined" ){ %>
            <p style="color: #ff0000;">
                <%= message %>
            </p>
            <% } %>




    </main>

    <%- include('../layouts/footer.ejs') %>