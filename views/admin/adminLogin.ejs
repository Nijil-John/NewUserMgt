<style>


body {
    font-family: Arial, sans-serif; /* Set font family */
    background-color: #f0f0f0; /* Set body background color */
    color: #333; /* Set body text color */
    text-align: center; /* Center align text */
}

.container {
    margin-top: 50px; /* Add margin from the top for spacing */
}

h1 {
    color: #333; /* Set heading text color */
}

p {
    color: green; /* Set paragraph text color */
}

form {
    margin-top: 20px; /* Add margin from the top for spacing */
}

form input[type="email"],
form input[type="password"],
form button[type="submit"] {
    padding: 8px; /* Add padding to input fields and button */
    margin-bottom: 10px; /* Add margin bottom to create space between input fields */
    width: 300px; /* Set input field width */
}

form button[type="submit"] {
    background-color: #007bff; /* Set button background color */
    color: #fff; /* Set button text color */
    border: none; /* Remove button border */
    cursor: pointer; /* Change cursor to pointer on hover */
}

form button[type="submit"]:hover {
    background-color: #0056b3; /* Change button background color on hover */
}

</style>



<% if(typeof message !=="undefined" ){
    %>
    <p style="color: green;"><%= message %></p>
    <%
 } %>

